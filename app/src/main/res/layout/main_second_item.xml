<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_item_style"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/id_second_item_icon"
        android:layout_width="120dp"
        android:layout_height="75dp"
        android:layout_margin="15dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_stub" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/id_second_item_icon"
        android:layout_alignTop="@+id/id_second_item_icon"
        android:layout_toRightOf="@+id/id_second_item_icon">

        <TextView
            android:id="@+id/id_second_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/background_dark"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:textSize="@dimen/main_subhead_size" />

        <TextView
            android:id="@+id/id_second_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textColor="@color/main_tab_default_color"
            android:textSize="@dimen/main_body_size" />

        <TextView
            android:id="@+id/id_second_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="24dp"
            android:layout_toRightOf="@+id/id_second_item_name"
            android:textColor="@color/main_tab_default_color"
            android:textSize="@dimen/main_body_size" />
    </RelativeLayout>
</RelativeLayout>