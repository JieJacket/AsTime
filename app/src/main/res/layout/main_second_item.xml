<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/id_second_item_icon"
        android:src="@drawable/ic_stub"
        android:layout_width="120dp"
        android:layout_margin="20dp"
        android:layout_height="75dp" />
    <RelativeLayout
        android:layout_toRightOf="@+id/id_second_item_icon"
        android:layout_alignTop="@+id/id_second_item_icon"
        android:layout_alignBottom="@+id/id_second_item_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/id_second_item_title"
            android:layout_width="wrap_content"
            android:textSize="@dimen/mian_body_size"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignParentBottom="true"
            android:id="@+id/id_second_item_name"
            android:layout_width="wrap_content"
            android:textSize="@dimen/mian_body_size"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="24dp"
            android:textSize="@dimen/mian_body_size"
            android:layout_toRightOf="@+id/id_second_item_name"
            android:id="@+id/id_second_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>